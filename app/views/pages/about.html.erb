
<div class="about-card-container">
  <div class="card">
    <h1>About me</h1>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag 'profile.jpg', width: 250, alt: 'prifile picture' %>
        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div 
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%"
                  >
                  
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <p>Some really interesting information about me</p>

        <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
        >
          Job history
        </button>
        <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              job 1
            </div>
            <div class="card card-block">
              job 2
            </div>
            <div class="card card-block">
              job 3
            </div>
          </div>
           <div class="collapse" id="education">
            <div class="card card-block">
              School 1
            </div>
            <div class="card card-block">
              School 2
            </div>
            <div class="card card-block">
              School 3
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>



