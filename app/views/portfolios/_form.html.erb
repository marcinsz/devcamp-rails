<%= form_with(model: portfolio_item, local: true) do |form| %>
  <% if portfolio_item.errors.any? %>
      <% portfolio_item.errors.full_messages.each do |message| %>
         <%= js add_gritter(message, title: 'Marcin Szots Portfolio', sticky: false) %>
      <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
           Upload main image file <%= form.file_field :main_image, style: 'display:none'%>
        </label>
       
      </div>
      <div class="form-group">
         <label class="btn btn-primary">
           Upload thumb image file <%= form.file_field :thumb_image, style: 'display:none'%>
        </label>
      </div>

    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>

    <div class="col-md-12">
      <hr>
      <h2>Technologies used:</h2>
      <div>
        <%= form.fields_for :technologies do |tech_form| %>
          <%= render 'technology_fields', f: tech_form %>
        <% end %>
        <div>
          <%= link_to_add_association 'Add technology', form, :technologies %>
        </div>
      </div>
    </div>
    
  </div>
    <div class="actions">
      <%= form.submit "Save portfolio item", class: 'btn btn-primary btn-block' %>
    </div>
<% end %>